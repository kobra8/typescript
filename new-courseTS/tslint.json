{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark": [true, "single"],
        "max-line-length": [true, 180],
        "no-console": [false, "log", "error"],
        "only-arrow-functions": false,
        "max-classes-per-file": [true, 3],
        "ban-types": [false, ["Object", "Use {} instead."], ["String"]]
    },
    "rulesDirectory": []
}